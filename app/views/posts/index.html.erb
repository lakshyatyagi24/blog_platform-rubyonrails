<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Posts</h1>
    <%= link_to "New Post", new_post_path, class: "btn btn-success" %>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card h-100 fixed-card-size">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text text-truncate"><%= truncate(post.body, length: 150) %></p>
            <%= link_to "Read More", post, class: "btn btn-primary mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
