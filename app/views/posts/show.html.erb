<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <p><strong>Comment:</strong> <%= comment.body %></p>
<% end %>

<h3>Add a comment:</h3>
<%= form_with(model: [ @post, Comment.new ], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>
  <%= form.submit "Add Comment", class: "btn btn-primary" %>
<% end %>
