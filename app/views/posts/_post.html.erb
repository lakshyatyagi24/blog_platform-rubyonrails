<div class="card mb-4">
  <div class="card-header d-flex align-items-center">
    <% if post.user.profile_picture.attached? %>
      <%= image_tag post.user.profile_picture.variant(resize_to_fill: [40, 40]), class: "rounded-circle me-2", alt: "User Picture" %>
    <% end %>
    <strong><%= post.user.username %></strong>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= truncate(post.body, length: 150) %></p>
    <%= link_to 'Read More', post_path(post), class: 'btn btn-primary' %>
  </div>
</div>
